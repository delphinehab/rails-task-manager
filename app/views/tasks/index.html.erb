<h1>My tasks</h1>


<ul style="list-style: none;">
<% @tasks.each do |task| %>
  <% if  task.completed == true %>
    <li> ☑︎ <%= link_to task.title, task_path(task) %> . <%= link_to "🚮", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete it ?"}%></li>
  <% else %>
    <li> ☐ <%= link_to task.title, task_path(task) %> . <%= link_to "🚮", task_path(task), method: :delete,  data: {confirm: "Are you sure you want to delete it ?"}%></li>
  <% end %>
<% end %>
</ul>
  <%#= form_for(task) do |f| %>
    <%#= f.check_box :completed, {}, true, false %>
    <%#= f.label :title %>
  <%# end %>
<%# end %>

